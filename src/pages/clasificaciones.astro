---

<Layout class=" min-h-screen">
    <Navigation  />
    <Clasificacion />
    <Footer />
</Layout>

<style>
    body {
    display: block; 
    background: url('/Images/BACKGROUND.svg');
    font-family: 'Poppins', sans-serif;
    background-attachment: fixed;
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center;
    margin: 0;
    }
