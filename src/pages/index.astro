---
import Navigation from '../components/Navigation.astro';
import "../styles/global.css";
import Layout from '../layouts/Layout.astro';
import Footer from '../components/Footer.astro';
import HeroSobreNosotros from '../components/HeroSobreNosotros.astro';
import TeamSobreNosotros from '../components/TeamSobreNosotros.astro';
import Rectangulo from '../components/bloques/Rectangulo.astro';

