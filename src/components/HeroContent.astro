---
// No usaremos el componente Image de Astro para mantener el comportamiento original de las imágenes
---

<div class="relative w-full h-[100vh] flex items-center justify-center overflow-hidden">
    <!-- Imagen hero - ahora con tamaños responsivos -->
    <img
      src="/Images/hero.svg"
      alt="Niño jugando fútbol"
      class="absolute z-20 w-[30rem] 2xl:w-[40rem] hidden md:block right-[20%] top-[10%] 2xl:right-[20%] 2xl:top-[10%]"
    />
  
    <!-- Líneas naranjas - ahora con tamaños responsivos -->
    <img
      src="/Images/Group 58.svg"
      alt=""
      class="absolute z-10 w-[50rem] 2xl:w-[70rem]  h-auto top-0 right-0 hidden md:block"
      aria-hidden="true"
    />
  
    <!-- Content container -->
    <div class="container mx-auto 2xl:ml-2 px-4 relative z-30">
        <div class="flex flex-col items-start max-w-md pt-16 md:pt-1 2xl:max-w-2xl 2xl:pt-8">
            <!-- Logo/Title - Ajustado para 2xl -->
            <h1 class="text-3xl md:text-5xl 2xl:text-[4rem] font-bold text-white mb-6 md:mb-8 2xl:mb-12">
              <span class="text-[#ffc107]">KIDS</span>LEAGUE
            </h1>
            
            <!-- Description - Ajustado para 2xl -->
            <p class="text-xl md:text-2xl 2xl:text-[2rem] text-white mb-10 md:mb-12 2xl:mb-16 leading-relaxed 2xl:leading-[1.5]">
              Nos alegra que te unas a nuestra
              comunidad de fútbol <span class="text-[#ffc107]">infantil</span>,
              donde los sueños de nuestros
              jóvenes jugadores se hacen
              realidad, promoviendo trabajo
              en equipo, disciplina y diversión.
            </p>
            
            <!-- Buttons - Ajustado para 2xl -->
            <div class="flex sm:flex-row gap-4 2xl:gap-6">
              <a
                href="/about"
                class="w-full sm:w-[200px] 2xl:w-[240px] h-[50px] md:h-[60px] 2xl:h-[70px] bg-transparent text-white border-2 border-white rounded-full md:rounded-[20px] text-lg md:text-2xl 2xl:text-[1.75rem] font-bold flex items-center justify-center hover:bg-white/10 transition-colors"
              >
                VER MÁS
              </a>
              <button
                id="shareButton"
                class="w-full sm:w-[200px] 2xl:w-[240px] h-[50px] md:h-[60px] 2xl:h-[70px] bg-transparent text-white border-2 border-white rounded-full md:rounded-[20px] text-lg md:text-2xl 2xl:text-[1.75rem] font-bold flex items-center justify-center hover:bg-white/10 transition-colors"
                aria-label="Compartir KidsLeague"
              >
                COMPARTIR
              </button>
            </div>
          </div>
    </div>
  </div>
  
  <script>
    document.getElementById('shareButton')?.addEventListener('click', async () => {
      const shareData = {
        title: 'KIDSLEAGUE',
        text: '¡Únete a nuestra comunidad de fútbol infantil! Promoviendo trabajo en equipo, disciplina y diversión.',
        url: window.location.origin,
      };
      
      try {
        if (navigator.share) {
          await navigator.share(shareData);
        } else {
          // Fallback options in order of preference
          try {
            // Try clipboard API first
            await navigator.clipboard.writeText(shareData.url);
            alert('¡Enlace copiado al portapapeles!');
          } catch {
            // If clipboard fails, try WhatsApp
            const shareUrl = `https://wa.me/?text=${encodeURIComponent(shareData.text + ' ' + shareData.url)}`;
            window.open(shareUrl, '_blank');
          }
        }
      } catch (error) {
        console.error('Error al compartir:', error);
        // Last resort fallback
        const urlToCopy = prompt('Copiar enlace para compartir:', shareData.url);
      }
    });
  </script>
  
  