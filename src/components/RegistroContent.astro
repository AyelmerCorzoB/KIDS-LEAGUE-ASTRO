      <div class="flex flex-col md:flex-row justify-center gap-8 mt-2">
        <!-- Árbitro -->
        <div class="flex flex-col items-center group">
          <div class="relative overflow-hidden  transition-transform duration-300">
            <img 
              src="/Images/arbitro.png" 
              alt="Árbitro" 
              class="w-full h-36 md:w-full md:h-48 object-cover"
            >
