              src="/Images/directivo.png" 
              alt="Directivo" 
              class="w-full h-36 md:w-full md:h-48 object-cover"
            >
            <div class="absolute inset-0 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          </div>
          <a
            href="/sesiones/sesion-directivo"
            class="mt-2 bg-gradient-to-br from-[#F26513] via-[#e46b2a] to-[#dd8740] text-white border-2 border-white/80 px-6 py-2 rounded-full font-bold transition-all duration-300 hover:bg-[#C0392B] hover: hover:-translate-y-1 focus:outline-none focus:ring-2 focus:ring-white/50"
          >
            DIRECTIVO
