<section class="py-8 px-4 sm:px-6 md:pt-12 overflow-hidden relative">
  <!-- Background gradient for visual interest -->
  <div class="absolute inset-0 bg-gradient-to-b from-transparent to-black/20 pointer-events-none"></div>
  
  <div class="max-w-6xl mx-auto">
    <!-- Section header with animated underline -->
    <div class="text-center mb-8 relative">
      <h2 class="text-2xl sm:text-3xl md:text-4xl text-white font-bold mb-3 inline-block">
        Equipo de Desarrollo
      </h2>
      <div class="h-1 w-20 bg-[#FF4E12] mx-auto rounded-full"></div>
    </div>

    <!-- Team grid with improved responsive layout for smaller cards -->
    <div class="grid grid-cols-2 xs:grid-cols-3 sm:grid-cols-4 md:grid-cols-5 lg:grid-cols-6 gap-3 sm:gap-4">
      {teamMembers.map((member) => (
        <div class={`team-card bg-black/50 rounded-lg p-2 text-center transition-all duration-300 
          ${member.featured ? 'border-[#FF4E12]' : 'border-[#FFD60A]'} border-[1.5px] 
          hover:scale-105 hover:shadow-[0_0_10px_rgba(255,78,18,0.5)] group`}>
          
          <!-- Image container with animated border -->
          <div class="relative mx-auto mb-2 w-14 h-14 sm:w-16 sm:h-16">
            <div class="absolute inset-0 rounded-full bg-gradient-to-r from-[#FF4E12] to-[#FFD60A] animate-spin-slow opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
            <img 
              src={member.image || "/placeholder.svg"} 
              alt={`Foto de ${member.name}`} 
              class="rounded-full object-cover w-full h-full border-[1.5px] border-[#FF4E12] relative z-10"
              loading="lazy"
            />
          </div>
          
          <!-- Member info with hover effects -->
          <h3 class="text-sm font-bold mb-0.5 text-[#FFD60A] group-hover:text-white transition-colors duration-300 line-clamp-1">
            {member.name}
          </h3>
          <p class="text-xs text-white/80 group-hover:text-white transition-colors duration-300 mb-1">
            {member.role}
          </p>
          
          <!-- Social links that appear on hover -->
          <div class="flex justify-center space-x-2 scale-0 group-hover:scale-100 transition-transform duration-300 origin-center">
            {member.linkedin && (
              <a 
                href={member.linkedin} 
                target="_blank" 
                rel="noopener noreferrer"
                class="text-white/70 hover:text-[#FFD60A] transition-colors duration-200" 
                aria-label={`LinkedIn de ${member.name}`}
              >
                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" viewBox="0 0 16 16">
                  <path d="M0 1.146C0 .513.526 0 1.175 0h13.65C15.474 0 16 .513 16 1.146v13.708c0 .633-.526 1.146-1.175 1.146H1.175C.526 16 0 15.487 0 14.854V1.146zm4.943 12.248V6.169H2.542v7.225h2.401zm-1.2-8.212c.837 0 1.358-.554 1.358-1.248-.015-.709-.52-1.248-1.342-1.248-.822 0-1.359.54-1.359 1.248 0 .694.521 1.248 1.327 1.248h.016zm4.908 8.212V9.359c0-.216.016-.432.08-.586.173-.431.568-.878 1.232-.878.869 0 1.216.662 1.216 1.634v3.865h2.401V9.25c0-2.22-1.184-3.252-2.764-3.252-1.274 0-1.845.7-2.165 1.193v.025h-.016a5.54 5.54 0 0 1 .016-.025V6.169h-2.4c.03.678 0 7.225 0 7.225h2.4z"/>
                </svg>
              </a>
            )}
            {member.github && (
              <a 
                href={member.github} 
                target="_blank" 
                rel="noopener noreferrer"
                class="text-white/70 hover:text-[#FFD60A] transition-colors duration-200" 
                aria-label={`GitHub de ${member.name}`}
              >
