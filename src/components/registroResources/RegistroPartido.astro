<header>
    <div class="absolute top-5 left-5 hidden md:block">
      <a href="/registro">
        <img src="/Images/Logo.png" alt="Logo Kids League" class="w-32">
      </a>
    </div>
  </header>
  
  <div class="min-h-screen flex items-center justify-center p-4 ">
    <div class="overflow-y-auto bg-gradient-to-br from-[#054D06] via-[#1F8D11] to-[#2FC429] rounded-2xl shadow-2xl border-2 border-white/5 w-full max-w-md p-6 space-y-6">
      <!-- Paso 1: Formulario de registro -->
      <div id="paso1" class="space-y-6">
        <h1 class="text-2xl font-bold text-center text-white">REGISTRO DE <span class="text-yellow-300">PARTIDO</span></h1>
  
        <form id="formularioPartido" class="space-y-4">
          <div class="grid grid-cols-2 gap-4">
            <div>
              <label for="fechaPartido" class="block text-sm font-medium text-white mb-1">Fecha del Partido</label>
              <input
                type="date"
                id="fechaPartido"
                name="fechaPartido"
                required
                class="bg-white w-full px-3 py-2 border border-gray-300 rounded-lg text-gray-700 focus:outline-none focus:ring-2 focus:ring-green-500"
              />
            </div>
            <div>
              <label for="marcador" class="block text-sm font-medium text-white mb-1">Marcador/Resultado</label>
              <input
                type="text"
                id="marcador"
                name="marcador"
                placeholder="1 - 1"
                required
                class="bg-white w-full px-3 text-gray-700 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500"
              />
            </div>
          </div>
  
          <div class="space-y-4">
            <div>
              <label for="equipoLocal" class="block text-sm font-medium text-white mb-1">Equipo Local</label>
              <input
                type="text"
                id="equipoLocal"
                name="equipoLocal"
                placeholder="Ej: Pal Norte"
                required
                class="bg-white w-full px-3 gray-700 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500"
              />
            </div>
            <div>
              <label for="equipoVisitante" class="block text-sm font-medium text-white mb-1">Equipo Visitante</label>
              <input
                type="text"
                id="equipoVisitante"
                name="equipoVisitante"
                placeholder="Ej: Campo Dos"
                required
                class="bg-white w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500"
              />
            </div>
          </div>
  
          <div class="grid grid-cols-2 gap-4">
            <div>
              <label for="tarjetasAmarillas" class="block text-sm font-medium text-white mb-1">Tarjetas Amarillas</label>
              <input
                type="number"
                id="tarjetasAmarillas"
                name="tarjetasAmarillas"
                placeholder="Ej: 2"
                min="0"
                required
                class="bg-white w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-yellow-500"
              />
            </div>
            <div>
              <label for="tarjetasRojas" class="block text-sm font-medium text-white mb-1">Tarjetas Rojas</label>
              <input
                type="number"
                id="tarjetasRojas"
                name="tarjetasRojas"
                min="0"
                placeholder="Ej: 2"
                required
                class="bg-white w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500"
              />
            </div>
          </div>
  
          <div>
            <label for="observacionArbitro" class="block text-sm font-medium text-white mb-1">Observación Árbitro</label>
            <textarea
              id="observacionArbitro"
              name="observacionArbitro"
              required
              placeholder="Ej: Jugadores agresivos"
              rows="1"
              class="bg-white w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500"
            ></textarea>
          </div>
  
          <div id="error" class="text-red-500 text-sm mt-2"></div>
  
          <div class="flex justify-between mt-6">
            <button
            onclick="location.href='../ingreso'"
              type="button"
              id="volverBtn"
              class="bg-gradient-to-br from-orange-500 to-orange-600 text-white px-6 py-2 rounded-full font-bold transition-all duration-300 hover:scale-105 hover:shadow-lg focus:outline-none focus:ring-2 focus:ring-orange-500"
            >
              Volver
            </button>
            <button
              type="button"
              id="continuar"
              class="bg-gradient-to-br from-orange-500 to-orange-600 text-white px-6 py-2 rounded-full font-bold transition-all duration-300 hover:scale-105 hover:shadow-lg focus:outline-none focus:ring-2 focus:ring-orange-500"
            >
              Siguiente
            </button>
          </div>
        </form>
      </div>
  
      <!-- Paso 2: Asignación de tarjetas y goles -->
      <div id="paso2" class="hidden space-y-8">
        <h2 class="text-2xl font-bold text-center text-white">Asignación de Tarjetas y Goles</h2>
  
        <div id="jugadoresLocal" class="space-y-4">
          <h3 id="tituloLocal" class="text-xl font-semibold text-center text-white"></h3>
          <div class="flex justify-center gap-4">
            <button
              type="button"
              id="amarillaLocal"
              class="bg-transparent border-2 border-yellow-400 text-white px-4 py-2 rounded-lg transition-colors duration-300 hover:bg-yellow-400 hover:text-black focus:outline-none focus:ring-2 focus:ring-yellow-500"
              data-equipo="local"
              data-tipo="amarilla"
            >
              + Amarilla
            </button>
            <button
              type="button"
              id="rojaLocal"
              class="bg-transparent border-2 border-red-500 text-white px-4 py-2 rounded-lg transition-colors duration-300 hover:bg-red-500 focus:outline-none focus:ring-2 focus:ring-red-500"
              data-equipo="local"
              data-tipo="roja"
            >
              + Roja
            </button>
          </div>
          <div id="listaJugadoresLocal" class="space-y-2 hidden"></div>
        </div>
  
        <div id="jugadoresVisitante" class="space-y-4">
          <h3 id="tituloVisitante" class="text-xl font-semibold text-center text-white"></h3>
          <div class="flex justify-center gap-4">
            <button
              type="button"
              id="amarillaVisitante"
              class="bg-transparent border-2 border-yellow-400 text-white px-4 py-2 rounded-lg transition-colors duration-300 hover:bg-yellow-400 hover:text-black focus:outline-none focus:ring-2 focus:ring-yellow-500"
              data-equipo="visitante"
              data-tipo="amarilla"
            >
              + Amarilla
            </button>
            <button
              type="button"
              id="rojaVisitante"
              class="bg-transparent border-2 border-red-500 text-white px-4 py-2 rounded-lg transition-colors duration-300 hover:bg-red-500 focus:outline-none focus:ring-2 focus:ring-red-500"
              data-equipo="visitante"
              data-tipo="roja"
            >
              + Roja
            </button>
          </div>
          <div id="listaJugadoresVisitante" class="space-y-2 hidden"></div>
        </div>
  
        <div id="golesContainer" class="space-y-4">
          <h3 class="text-xl font-semibold text-center text-white">Registro de Goles</h3>
          <button
            type="button"
            id="agregarGol"
            class="w-full bg-transparent border-2 border-white text-white px-4 py-2 rounded-lg transition-colors duration-300 hover:bg-green-500 hover:border-green-500 focus:outline-none focus:ring-2 focus:ring-green-500"
          >
            Agregar Gol
          </button>
        </div>
  
        <div class="flex justify-between mt-6">
          <button
            type="button"
            id="atras"
            class="bg-gradient-to-br from-orange-500 to-orange-600 text-white px-6 py-2 rounded-full font-bold transition-all duration-300 hover:scale-105 hover:shadow-lg focus:outline-none focus:ring-2 focus:ring-orange-500"
          >
            Atrás
          </button>
          <button
            type="button"
            id="guardar"
            class="bg-gradient-to-br from-orange-500 to-orange-600 text-white px-6 py-2 rounded-full font-bold transition-all duration-300 hover:scale-105 hover:shadow-lg focus:outline-none focus:ring-2 focus:ring-orange-500"
          >
            Guardar
          </button>
        </div>
      </div>
    </div>
  </div>

  <script src="/src/data/FormRegistroPartidos.js"></script>